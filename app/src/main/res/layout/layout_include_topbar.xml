<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/topbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/topbar_back" />

    <TextView
        android:id="@+id/topbar_seach"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:text="搜索物件"
        android:gravity="center"
        android:background="@drawable/topbar_search_edit_unselected"/>

    <ImageView
        android:id="@+id/topbar_decode"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/topbar_decode"
        />

</LinearLayout>
